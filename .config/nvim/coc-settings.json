{
    "languageserver": {
        "purescript": {
            "command": "npx",
            "args": ["purescript-language-server", "--stdio"],
            "rootPatterns": [
                "bower.json",
                "psc-package.json",
                "spago.dhall",
            ],
            "filetypes": [ "purescript" ],
            "settings": {
                "purescript": {
                  "addSpagoSources": true,
                  "addNpmPath": true,
                  "buildCommand": "spago build --purs-args --json-errors",
                  "editorMode": true
                },
            },
        },
        "dhall": {
            "command": "dhall-lsp-server",
            "filetypes":
                [ "dhall"
                ],
        },
        "haskell": {
            "command": "ghcide",
            "args": ["--lsp"],
            "rootPatterns": [
              "stack.yaml",
              ".stack.yaml",
              ".hie-bios",
              "BUILD.bazel",
              "cabal.config",
              "package.yaml"
            ],
            "filetypes": [
              "hs",
              "lhs",
              "haskell"
            ],
          }
        },
}
