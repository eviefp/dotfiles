{
    "languageserver": {
      "haskell": {
        "command": "hie-wrapper",
        "rootPatterns": [
          ".stack.yaml",
          "cabal.config",
          "package.yaml"
        ],
        "filetypes": [
          "hs",
          "lhs",
          "haskell"
        ],
        "initializationOptions": {
          "languageServerHaskell": {
              "hlintOn": true,
              "maxNumberOfProblems": 10,
              "completionSnippetsOn": true
          }
        },
      }
    }
}
