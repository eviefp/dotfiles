GIT_PROMPT_ONLY_IN_REPO=1
GIT_PROMPT_THEME=Evermeet_Ubuntu
source ~/.bash-git-prompt/gitprompt.sh

clip() {
    scrot -s ~/screenshot.png
    xclip -selection clipboard -t image/png ~/screenshot.png
    rm ~/screenshot.png
}

saveDotFiles() {
    cd ~
    cp .bash_extras .ghci .gitconfig .gitignore .spacemacs .stalonetrayrc .xmobarrc .xsessionrc code/dotfiles
    cp -R .xmonad code/dotfiles
    cd code/dotfiles
}

re() {
    emacs25 --insecure . &>/dev/null 2>&1 &
}

swapui() {
    if [ -f ~/.xsessionrc ]; then
        mv ~/.xsessionrc ~/.xsessionrc-skip
        sudo systemctl restart lightdm.service
    elif [ -f ~/.xsessionrc-skip ]; then
        mv ~/.xsessionrc-skip ~/.xsessionrc
        sudo systemctl restart lightdm.service
    else
        echo "Error: can't find either ~/.xsessionrc or ~/.xsessionrc-skip. Aborting..."
    fi

}

fixUI() {
    xrandr --output HDMI-0 --scale 1.5x1.5
    feh --bg-scale /usr/share/backgrounds/haskell.jpg
}
